# Detiene la búsqueda en directorios superiores
root = true

# Reglas por defecto para todo el repo
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# JavaScript / TypeScript
[*.{js,cjs,mjs,jsx,ts,tsx}]
indent_size = 2

# JSON (incluye *.rc que suelen ser JSON)
[*.{json,jsonc,code-workspace}]
indent_size = 2

# YAML / YML (CI, configs)
[*.{yml,yaml}]
indent_size = 2

# CSS / Preprocesadores / HTML
[*.{css,scss,less,html}]
indent_size = 2

# Markdown / MDX: no recortar espacios finales (saltos de línea duros)
[*.{md,mdx}]
trim_trailing_whitespace = false

# SVG y otros XML
[*.{xml,svg}]
indent_size = 2

# Shell / env
[*.{sh,bash,env}]
indent_style = space
indent_size = 2

# Makefiles requieren TABs reales
[Makefile]
indent_style = tab
